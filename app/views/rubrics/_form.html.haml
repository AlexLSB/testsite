= form_for @rubric do |f|
  - if @rubric.errors.any?
    #error_explanation
      %h2= "#{pluralize(@rubric.errors.count, "error")} prohibited this rubric from being saved:"
      %ul
        - @rubric.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :title
    = f.text_field :title
  .field
    = f.label :parent_id
    = f.number_field :parent_id
  .field
    = f.label :slug
    = f.text_field :slug
  .actions
    = f.submit 'Save'
